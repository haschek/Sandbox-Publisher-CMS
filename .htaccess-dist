# Sandbox Publisher
# .htaccess
#
# @author Michael Haschke @ eye48.com
# @version $Id: $

# please replace '/path/to/sandbox.php' by
# the location of sandbox.php on your server (base url)

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    ### Redirect requested web folder to URI with ending slash
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteCond %{REQUEST_URI} !/$
    RewriteRule . %{REQUEST_URI}/ [R=permanent,L,QSA]

    ### Redirect all other stuff the Sandbox
    ### read bottom-up
    # -- uncomment/edit -- AND only for HTML files
    # -- uncomment/edit -- RewriteCond %{REQUEST_URI} \.html$ [NC]
    # AND not for PHP files
    RewriteCond %{REQUEST_FILENAME} !\.php$ [NC]
    # OR for not existing files
    RewriteCond %{REQUEST_FILENAME} !-f [OR]
    # OR for real files
    RewriteCond %{REQUEST_FILENAME} -F [OR]
    # OR for real directories
    RewriteCond %{REQUEST_FILENAME} -d [OR]
    # for not existing directories
    RewriteCond %{REQUEST_FILENAME} !-d [OR]
    # Redirect to Sandbox Publisher
    RewriteRule . /path/to/sandbox.php [L,QSA]
</IfModule>
